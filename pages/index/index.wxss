/**index.wxss**/

.container{ 
  display: flex; 
  flex-direction: column; 
  justify-content: center;
  align-items: center;
  height: 100%; 
  background-color: #f6f8f8
} 

.nav{
  display: flex;
  flex-direction: column;
  background-color: #315BA7;
  height: 30vh;
  width: 100vw;
  align-items: center;
  justify-content: center
}
.brand-img{
  height: 20vh;
  width: 100vw;
}
.input-container{
  justify-content: center;
  align-items: center;
  display: flex;
  height: 10vh;
}
.search-input{ 
  background-color: white;
  border-radius: 6px;
  height: 6vh;
  line-height: 6vh;
  width: 80vw;
  text-align: center;
  font-size: 30rpx;
  margin-left: -5vw
}
.search-icon{
  z-index: 3;
}
 .search-icon icon{
  margin-left: 10rpx;
} 
.content{
  width: 90vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
  margin-top: 4vh;
  /* box-shadow: -3rpx -3rpx 10rpx #A0C6E8  */
}

.navbar{  
  display: flex;
  height: 6vh;
  width: 100%;
  justify-content: center; 
  align-items: center;
  flex-wrap: nowrap;
  font-size: 30rpx;
  
} 
.item{ 
  display: flex;
  width: 25%;
  height: 100%;
  justify-content: center;
  align-items: center;
  border-bottom: 4rpx white solid
}

.item.active{ 
  color: #0072E3; 
  border-bottom: 4rpx #0072E3 solid
} 
